<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.justthetip"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.justthetip.activity.PayersActivity"
            android:label="@string/title_activity_payers" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.justthetip.activity.ItemsActivity"
            android:label="@string/title_activity_items" >
        </activity>
        <activity
            android:name="com.justthetip.activity.TaxActivity"
            android:label="@string/title_activity_tax" >
        </activity>
        <activity
            android:name="com.justthetip.activity.TipActivity"
            android:label="@string/title_activity_tip" >
        </activity>
    </application>

</manifest>